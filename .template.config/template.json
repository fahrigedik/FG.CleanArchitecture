{
  "$schema": "http://json.schemastore.org/template",
  "author": "Fahri Gedik",
  "classifications": [ "Clean Architecture", "Web", "API" ],
  "identity": "FG.CleanArchitecture",
  "name": "Clean Architecture Web API Template",
  "shortName": "FG.Clean",
  "sourceName": "WebAPI",
  "tags": {
    "language": "C#",
    "type": "project"
  },
  "symbols": {
      "ProjectName": {
          "type": "parameter",
          "description": "Fahri Gedik Clean Architecture Template",
            "replaces": "FG.CleanArchitecture",
          "defaultValue": "MyNewProject"
      },
    "Framework": {
      "type": "parameter",
      "description": "Target framework version",
      "datatype": "choice",
      "choices": [
        { "choice": "net9.0", "description": "Hedef .NET 9.0" },
        { "choice": "net8.0", "description": "Hedef .NET 8.0" }
      ],
      "defaultValue": "net9.0"
    }
  },
  "sources": [
    {
      "source": "./",
      "target": "./",
      "include": [ "**/*" ],
      "exclude": [
        "**/[Bb]in/**",
        "**/[Oo]bj/**",
        ".template.config/**",
        "*.nupkg",
        ".git/**",
        ".vs/**",
        "*.user",
        "*.suo"
      ]
    }
  ],
  "primaryOutputs": [
    { "path": "src/FG.CleanArchitecture/Domain/Domain.csproj" },  
    { "path": "src/FG.CleanArchitecture/Application/Application.csproj" },
    { "path": "src/FG.CleanArchitecture/Infrastructure/Infrastructure.csproj" },
    { "path": "src/FG.CleanArchitecture/WebAPI/WebAPI.csproj" }
  ],
  "postActions": [
        {
            "description": "Rename folders to match the new project name.",
            "manualInstructions": [
                { "text": "Rename folders: Domain -> [ProjectName].Domain, Application -> [ProjectName].Application, Infrastructure -> [ProjectName].Infrastructure, WebAPI -> [ProjectName].WebAPI" }
            ],
            "actionId": "210D431B-A78B-4D2F-B762-4ED3E3EA9025", 
            "continueOnError": false
        }
    ]
}